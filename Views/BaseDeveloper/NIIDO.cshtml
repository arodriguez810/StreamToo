@using Admin.BaseClass.UI
@using Admin.Models;

@{
    Widget widget = new Widget("NIIWidget2", "Generate FULL CRUD", Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_reorder, this.ViewContext);
    widget.Data_widget_deletebutton = true;
    widget.Data_widget_togglebutton = true;
    widget.Data_widget_colorbutton = true;
    widget.Data_widget_fullscreenbutton = true;
    widget.Data_widget_sortable = true;
    widget.Data_widget_editbutton = true;
}

<section id="widget-grid" class="">
    <div class="row">
        @Html.Raw(widget.beginHeader())
        @Html.Raw(widget.beginCustomButton())
        @*buttons*@
        @Html.Raw(widget.Dcontinue())
        @Html.Raw(widget.endHeader())
        <form action="@Url.Action("NIIDO", "BaseDeveloper")" method="post" id="NII-form" class="smart-form" data-successmessage="@("Saved")" data-errormessage="@("Error writing data try later.")">
            <center>
                <fieldset>
                    <div class="row">
                        @Html.BaseTextBox("prefijo", "TEST", "required")
                    </div>
                </fieldset>
                <footer>
                    <button id="btnSubmit" class="btn btn-success"><i class="glyphicon glyphicon-ok" title="@("Save")"></i>Generated ALL</button>
                </footer>
            </center>
        </form>
        @Html.Raw(widget.Dcontinue())
        @Html.Raw(widget.end())
    </div>
    <div>
        <span style="color:red">@ViewBag.resumen</span>
    </div>
</section>

<script>
    pageSetUp();
    $(document).ready(function () {
        validateForm("NII-form");
    });
</script>
