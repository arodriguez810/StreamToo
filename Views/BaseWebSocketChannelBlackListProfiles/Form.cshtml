@model Admin.Models.BaseWebSocketChannelBlackListProfile
@using Admin.BaseClass.UI
@using Admin.Models;
@{ 
    var width = 80 + "%";
    var profileFieldCol = 6;
    if (!string.IsNullOrEmpty(ViewBag.from))
    {
        width = 50 + "%";
        profileFieldCol = 12;
    }
}
<i data-width="@width" class="dn" id="modalInfoWebSocketChannelBlackListProfiles" data-modalimg="@Helper.GetApplicationImage(new Admin.Models.Context())" data-modalTitle="@("Create WebSocketChannelBlackListProfile")" data-editModalTitle="@("Edit WebSocketChannelBlackListProfile")" data-editing="@(Model.Id==0?"False":"True")"></i>
<div class="panel panel-primary">
    <div class="panel-heading">
        <button class="close" type="button" data-dismiss="modal" aria-hidden="true"> X </button>
        <h3 class="panel-title">Web Socket Channel Black List Profiles</h3>
    </div>
    <div class="panel-body">
        <form action="@Url.Action("Save", "BaseWebSocketChannelBlackListProfiles")" id="WebSocketChannelBlackListProfile-form" class="smart-form ajaxForm" data-successMessage="@("Saved")" data-errorMessage="@("Error writing data try later.")">
            <fieldset>
                @Html.HiddenFor(d => d.Id)
                <div class="row">
                    @{ 
                        var profileSelectedList = new List<object>();
                        var webSocketChannelSelectedList = new List<object>();

                        profileSelectedList.Add(Model.profileId);
                        webSocketChannelSelectedList.Add(Model.webSocketChannelId);
                    }
                    @Html.BaseDropDownList("ProfileId", "BaseProfile", "id", "name", "", profileFieldCol, "Profile", "Select a Profile", "", Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, profileSelectedList, false, "Refresh", "", "required")
                    @if (!string.IsNullOrEmpty(ViewBag.from))
                    {
                        string[] relations = ViewBag.from.Split(':');
                        @Html.Hidden("webSocketChannelId", relations[1])
                    }
                    else
                    {
                        @Html.BaseDropDownList("WebSocketChannelId", "BaseWebSocketChannels", "Id", "Name", "", 6, "Channel", "Select a Channel", "", Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, webSocketChannelSelectedList, false, "Refresh", "", "required")
                    }
                </div>
            </fieldset>
            <footer>
                @if (!string.IsNullOrEmpty(ViewBag.from))
                {
                    string[] relations = ViewBag.from.Split(':');
                    <a class="btn btn-danger formClose" title="@("Close")" href="#MS@(relations[0].Split('_')[0])/Form/@(relations[1])"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
                else if (ViewBag.relations.Count > 0 && Model.Id != 0)
                {
                    <a class="btn btn-danger formClose fromBack" title="@("Close")" href="#BaseWebSocketChannelBlackListProfiles/Index"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
                <button class="btn btn-success" data-success="$('#baseDynamicModalObject').modal('hide');csBaseWebSocketChannelBlackListProfiles@(ViewBag.from.Split(':')[0]).data('CStable').update();" title="@("Save")"><i class="glyphicon glyphicon-floppy-disk"></i></button>
            </footer>
        </form>
    </div>
</div>
@if (ViewBag.relations.Count > 0 && Model.Id != 0)
{
    bool first = true;
    <div class="panel panel-primary">
        <ul class="nav nav-tabs">
            @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                <li class="@(first ? "active" : "")"><a href="#@(item.K_Table + "_" + item.FK_Column)" data-toggle="tab" aria-expanded="@(first ? "true" : "false")">@Helper.Capitalize(item.K_Table, 2)'s @Helper.Capitalize(item.FK_Column.Split('_')[1])</a></li>
                first = false;
            }
        </ul>
        <div class="panel-body">
            <div id="myTabContent" class="tab-content">
                @{
                    first = true;
                }
                @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                    <div class="tab-pane fade @(first ? "active in" : "")" id="@(item.K_Table + "_" + item.FK_Column)">
                        Loading...
                    </div>
                    <script>
                        loadContent("@Url.Action("index", item.K_Table, new { from = item.FK_Column+ ":"+Model.Id })", "#@(item.K_Table + "_" + item.FK_Column)");
                    </script>
                    first = false;
                }
            </div>
        </div>
    </div>
                    }
<script>
function next() {
    location.href = "#BaseWebSocketChannelBlackListProfiles/Form/" + BaseLastID;
}
    pageSetUp(true);
    $(document).ready(function () {
        validateForm("WebSocketChannelBlackListProfile-form");
var from = "@ViewBag.from";
    HideRelation("WebSocketChannelBlackListProfile-form", from);
    });
</script>