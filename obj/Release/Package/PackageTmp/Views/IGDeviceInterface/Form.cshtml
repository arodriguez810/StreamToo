@model Admin.Models.IGDeviceInterface
@using Admin.BaseClass.UI
@using Admin.Models;
<i  class="dn" id="modalInfoDeviceInterface" data-modalimg="@Helper.GetApplicationImage(new Admin.Models.Context())" data-modalTitle="@("Create DeviceInterface")"  data-editModalTitle="@("Edit DeviceInterface")" data-editing="@(Model.id==new Guid()?"False":"True")" ></i>
<div class="panel panel-primary">
    <div class="panel-heading">
        <button class="close" type="button" data-dismiss="modal" aria-hidden="true"> X </button>
        <h3 class="panel-title">DeviceInterface</h3>
    </div>
    <div class="panel-body">
<form action="@Url.Action("Save", "IGDeviceInterface")" id="IGDeviceInterface-form" class="smart-form ajaxForm" data-successMessage="@("Saved")" data-errorMessage="@("Error writing data try later.")"  >
<fieldset>
@Html.HiddenFor(d => d.id)
<div class="row">
@Html.BaseTextBox("name", Model.name,"Name", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 6, new { placeholder = ("Name")  }, "", "", false, new MyHtmlHelpers.BaseToolTip(""))
@Html.BaseTextBox("description", Model.description,"Description", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 6, new { placeholder = ("Description")  }, "", "", false, new MyHtmlHelpers.BaseToolTip(""))
</div>
<div class="row">
@Html.BaseTextBox("values", Model.values,"Values", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 6, new { placeholder = ("Values")  }, "", "", false, new MyHtmlHelpers.BaseToolTip(""))
@Html.BaseTextBox("alarms", Model.alarms,"Alarms", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 6, new { placeholder = ("Alarms")  }, "", "", false, new MyHtmlHelpers.BaseToolTip(""))
</div>
<div class="row">
@Html.BaseTextBox("pollDate", Model.pollDate,"Poll Date", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 6, new { placeholder = ("Poll Date")  }, "", "", false, new MyHtmlHelpers.BaseToolTip(""))
@{var selecteddevice_device = new List<object>(); if(Model.device_device!=null) { selecteddevice_device.Add(Model.device_device); } } 
@Html.BaseDropDownList("device_device", "IGDevice", "id", "key", "", 6, "Device", "Select Device", "", Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_arrow_circle_down, selecteddevice_device, false, "Refresh IGDevice", "", "", "", null) 
</div>
</fieldset>
<footer>
@if (!string.IsNullOrEmpty(ViewBag.from))
                {
                    string[] relations = ViewBag.from.Split(':');
                    <a class="btn btn-danger formClose" title="@("Close")" href="#IG@(relations[0].Split('_')[0])/Form/@(relations[1])"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
else if (ViewBag.relations.Count > 0 && Model.id != new Guid())
                {
                    <a class="btn btn-danger formClose fromBack" title="@("Close")" href="#IGDeviceInterface/Index"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
<button class="btn btn-success" data-success="$('#baseDynamicModalObject').modal('hide');csIGDeviceInterface@(ViewBag.from.Split(':')[0]).data('CStable').update();" title="@("Save")" ><i class="glyphicon glyphicon-floppy-disk"></i></button>
</footer>
</form>
    </div>
</div>
@if (ViewBag.relations.Count > 0 && Model.id != new Guid())
{
    bool first = true;
    <div class="panel panel-primary">
        <ul class="nav nav-tabs">
            @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                <li class="@(first ? "active" : "")"><a href="#@(item.K_Table + "_" + item.FK_Column)" data-toggle="tab" aria-expanded="@(first ? "true" : "false")">@Helper.Capitalize(item.K_Table,2)'s @Helper.Capitalize(item.FK_Column.Split('_')[1])</a></li>
                first = false;
            }
        </ul>
        <div class="panel-body">
            <div id="myTabContent" class="tab-content">
                @{
                    first = true;
                }
                @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                    <div class="tab-pane fade @(first ? "active in" : "")" id="@(item.K_Table + "_" + item.FK_Column)">
                        Loading...
                    </div>
                    <script>
                        loadContent("@Url.Action("index", item.K_Table, new { from = item.FK_Column+ ":"+Model.id })", "#@(item.K_Table + "_" + item.FK_Column)");
                    </script>
first = false;
                }
            </div>
        </div>
    </div>
                    }
<script>
function next() {
        location.href = "#IGDeviceInterface/Form/" + BaseLastID;
}
    pageSetUp(true);
    $(document).ready(function () {
        validateForm("IGDeviceInterface-form");
var from = "@ViewBag.from";
        HideRelation("IGDeviceInterface-form", from);
    });
</script>