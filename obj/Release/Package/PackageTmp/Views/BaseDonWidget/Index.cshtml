@model Admin.Models.BaseWidget
@using Admin.BaseClass.UI
@using Admin.Models;

<div style='text-align:center'>
    <button class="btn btn-@(ViewBag.config.secundaryColor) baseDynamicModal" data-loading-text="<i class='fa fa-refresh fa-spin'></i>" data-action="@Url.Action("Form", "BaseDonWidget")" title="@("Add New")"><i class="@BaseUIIconText.glyphicon.glyphicon_glyphicon_plus"></i></button>
    <button class="btn btn-@(ViewBag.config.secundaryColor) refreshTable" onclick="refreshMe();" data-action="@Url.Action("Form", "BaseDonWidget")" title="@("Refresh Table")"><i class="@BaseUIIconText.glyphicon.glyphicon_glyphicon_refresh"></i></button>
    <button class="btn btn-@(ViewBag.config.secundaryColor)" id="configAdmColumns" title="@("Columns")"><i class="@BaseUIIconText.glyphicon.glyphicon_glyphicon_list"></i></button>
</div>
<div class="panel" style="border:none">
    <div class="panel-body">
        <div id="csBaseWidgetDiv" data-url="@Url.Action("data", "BaseDonWidget")" class=""></div>
    </div>
</div>

<script type="text/javascript">
    pageSetUp();

    function refreshMe() {
        csBaseWidget.data('CStable').update();
    }

    selectedFilters = undefined;
    filterQuery = "";
    filterQueryURL = "";
    generalFilterSearch = "";
    generalFilterlimit = 20;
    function LoadTableBaseWidget() {
        csBaseWidget = $('#csBaseWidgetDiv');
        csBaseWidget.CStable({
            ajaxUrl: csBaseWidget.data('url'),
            pagerFirstLabel: '@("First")',
            pagerLastLabel: '@("Last")',
            ajaxData: {
                limit: 10,
                offset: 0
            },
            current: 1,
            pagerCount: 10,
            hasSearch: false,
            hasShow: false,
        });
    }
    LoadTableBaseWidget();
</script>
