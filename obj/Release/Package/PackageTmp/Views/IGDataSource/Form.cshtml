@model Admin.Models.IGDataSource
@using Admin.BaseClass.UI
@using Admin.Models;
<i class="dn" id="modalInfoDataSource" data-modalimg="@Helper.GetApplicationImage(new Admin.Models.Context())" data-modalTitle="@("Create DataSource")" data-editModalTitle="@("Edit DataSource")" data-editing="@(Model.id==0?"False":"True")"></i>
<div class="panel panel-primary">
    <div class="panel-heading">
        <button class="close" type="button" data-dismiss="modal" aria-hidden="true"> X </button>
        <h3 class="panel-title">DataSource</h3>
    </div>
    <div class="panel-body">
        <form action="@Url.Action("Save", "IGDataSource")" id="IGDataSource-form" class="smart-form ajaxForm" data-successMessage="@("Saved")" data-errorMessage="@("Error writing data try later.")">
            <fieldset>
                @Html.HiddenFor(d => d.id)
                @Html.HiddenFor(d => d.active)
                <div class="row">
                    @Html.BaseTextBox("baseurl", Model.baseurl, "Baseurl", new { icon1 = new BaseTextBoxIcon() { Icon = Admin.BaseClass.UI.BaseUIIcon.fa.fa_fa_text_width, Position = BaseTextBoxIconPosition.icon_append } }, 12, new { placeholder = ("Baseurl") }, "required", "", false, new MyHtmlHelpers.BaseToolTip(""))
                </div>
            </fieldset>
            <footer>
                @if (!string.IsNullOrEmpty(ViewBag.from))
                {
                    string[] relations = ViewBag.from.Split(':');
                    <a class="btn btn-danger formClose" title="@("Close")" href="#IG@(relations[0].Split('_')[0])/Form/@(relations[1])"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
                else if (ViewBag.relations.Count > 0 && Model.id != 0)
                {
                    <a class="btn btn-danger formClose fromBack" title="@("Close")" href="#IGDataSource/Index"><i class="glyphicon glyphicon-floppy-remove"></i></a>
                }
                <button class="btn btn-success" data-success="$('#baseDynamicModalObject').modal('hide');csIGDataSource@(ViewBag.from.Split(':')[0]).data('CStable').update();" title="@("Save")"><i class="glyphicon glyphicon-floppy-disk"></i></button>
            </footer>
        </form>
    </div>
</div>
@if (ViewBag.relations.Count > 0 && Model.id != 0)
{
    bool first = true;
    <div class="panel panel-primary">
        <ul class="nav nav-tabs">
            @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                <li class="@(first ? "active" : "")"><a href="#@(item.K_Table + "_" + item.FK_Column)" data-toggle="tab" aria-expanded="@(first ? "true" : "false")">@Helper.Capitalize(item.K_Table, 2)'s @Helper.Capitalize(item.FK_Column.Split('_')[1])</a></li>
                first = false;
            }
        </ul>
        <div class="panel-body">
            <div id="myTabContent" class="tab-content">
                @{
                    first = true;
                }
                @foreach (var item in (List<VWISRElation>)ViewBag.relations)
                {
                    <div class="tab-pane fade @(first ? "active in" : "")" id="@(item.K_Table + "_" + item.FK_Column)">
                        Loading...
                    </div>
                    <script>
                        loadContent("@Url.Action("index", item.K_Table, new { from = item.FK_Column+ ":"+Model.id })", "#@(item.K_Table + "_" + item.FK_Column)");
                    </script>
                    first = false;
                }
            </div>
        </div>
    </div>
                    }
<script>
    function next() {
        location.href = "#IGDataSource/Form/" + BaseLastID;
    }
    pageSetUp(true);
    $(document).ready(function () {
        validateForm("IGDataSource-form");
        var from = "@ViewBag.from";
        HideRelation("IGDataSource-form", from);
    });
</script>